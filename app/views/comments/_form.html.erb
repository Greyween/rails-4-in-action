<h2>New Comment</h2>
<%= form_for [@ticket, @comment] do |f| %>
	<ul>
	<%= @comment.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>	
	<p>
		<%= f.label :text %><br/>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.label :state_id %>
		<%= f.select :state_id, @states.map { |s| [s.name, s.id] }, selected: @ticket.state_id %>
	</p>
	<%= f.submit %>
<% end %>